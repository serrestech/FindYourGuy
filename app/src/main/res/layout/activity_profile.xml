<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:tools="http://schemas.android.com/tools"
android:paddingLeft="16dp"
android:paddingRight="16dp"
android:id="@+id/activity_profile"
tools:context="com.example.threedots.findyourguy.Common.ProfileActivity">

<TextView
    android:id="@+id/textViewName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="20dp"
    android:text="Name"
    android:textSize="16dp" />

<EditText
    android:id="@+id/editTextName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textViewName"
    android:ems="10"
    android:inputType="textPersonName"
    android:visibility="gone" />

<TextView
    android:id="@+id/textViewRating"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textViewNameContent"
    android:layout_marginTop="11dp"
    android:text="Rating"
    android:textSize="16dp" />

<RatingBar
    android:id="@+id/rating"
    style="?android:attr/ratingBarStyleSmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textViewRating"
    android:isIndicator="true"
    android:numStars="5"
    android:stepSize="0.1" />

<TextView
    android:id="@+id/textViewNameContent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textViewName" />

<TextView
    android:id="@+id/textViewAddress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/rating"
    android:layout_marginTop="13dp"
    android:textSize="16dp"
    android:text="Address" />

<EditText
    android:id="@+id/editTextAddress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textViewAddress"
    android:ems="10"
    android:inputType="textPersonName"
    android:visibility="gone" />

<TextView
    android:id="@+id/textViewAddressContent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textViewAddress"
    android:layout_toEndOf="@+id/textViewNameContent"
    android:layout_toRightOf="@+id/textViewNameContent" />

<TextView
    android:id="@+id/textViewAttitude"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textViewAddressContent"
    android:layout_marginTop="11dp"
    android:textSize="16dp"
    android:text="Attitude" />

<EditText
    android:id="@+id/editTextAttitude"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textViewAttitude"
    android:layout_toEndOf="@+id/textViewAddressContent"
    android:layout_toRightOf="@+id/textViewAddressContent"
    android:ems="10"
    android:inputType="textPersonName"
    android:visibility="gone" />

<TextView
    android:id="@+id/textViewAttitudeContent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textViewAttitude" />

<TextView
    android:id="@+id/textViewDescription"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textViewAttitudeContent"
    android:layout_marginTop="19dp"
    android:textSize="16dp"
    android:text="Description" />

<EditText
    android:id="@+id/editTextDescription"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textViewDescription"
    android:layout_toEndOf="@+id/textViewAttitudeContent"
    android:layout_toRightOf="@+id/textViewAttitudeContent"
    android:ems="10"
    android:inputType="textPersonName"
    android:maxLines="4"
    android:visibility="gone" />

<TextView
    android:id="@+id/textViewDescritpion"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textViewDescription"
    android:layout_toEndOf="@+id/textViewAttitudeContent"
    android:layout_toRightOf="@+id/textViewAttitudeContent" />

<Button
    android:id="@+id/button2"
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:background="@android:drawable/ic_menu_edit"
    android:layout_alignTop="@+id/textViewName"
    android:layout_centerHorizontal="true" />

</RelativeLayout>